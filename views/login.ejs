<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Value Learn</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="/css/style.css">
    <link href="https://fonts.googleapis.com/css2?family=Lora:wght@400;700&display=swap" rel="stylesheet">
    <style>
        /* Custom CSS */
        body {
            font-family: 'Arial', sans-serif;
            background-color: #f8f9fa;
            height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
            margin: 0;
        }

        .card {
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            border-radius: 10px;
            padding: 30px;
            width: 100%;
            max-width: 450px; /* Increased box size */
            margin: 10px; /* Added space between boxes */
        }

        .card h2 {
            font-size: 24px;
            color: #333;
        }

        .dashboard-heading {
            font-family: 'Lora', serif;
            text-align: center;
            font-size: 32px;
            font-weight: bold;
            margin-bottom: 20px;
        }

        .btn-primary {
            background-color: #007bff;
            border-color: #007bff;
            transition: background-color 0.3s ease;
        }

        .btn-primary:hover {
            background-color: #0056b3;
            border-color: #004085;
        }

        .form-label {
            font-weight: bold;
        }

        .container {
            width: 100%;
            max-width: 1000px; /* Increased the container width */
            margin-top: 20px;
        }

        .form-group {
            margin-bottom: 1.5rem;
        }

        .form-control {
            border-radius: 5px;
            padding: 10px;
        }

        /* Styles for responsive behavior */
        @media (max-width: 768px) {
            .container {
                width: 100%;
                max-width: 90%; /* Makes the container take up more space on smaller screens */
            }
            .card {
                width: 100%;
            }
        }
    </style>
</head>

<body>
    <div class="container">
        <h1 class="dashboard-heading">WELCOME TO VLGE MANAGEMENT DASHBOARD</h1>
        <div class="row justify-content-center">
            <!-- Admin Login Card -->
            <div class="col-md-6 col-lg-4 d-flex justify-content-center mb-4">
                <div class="card p-4 shadow">
                    <h2 class="text-center mb-4">ADMIN LOGIN</h2>
                    <br>
                    <form action="/login" method="POST">
                        <div class="mb-3">
                            <label for="email" class="form-label">Email:</label>
                            <input type="email" id="email" name="email" class="form-control" required>
                        </div>
                        <br>
                        <div class="mb-3">
                            <label for="password" class="form-label">Password:</label>
                            <input type="password" id="password" name="password" class="form-control" required>
                        </div>
                        <button type="submit" class="btn btn-primary w-100">LOGIN</button>
                    </form>
                </div>
            </div>

            <!-- Student Login Section -->
            <div class="col-md-6 col-lg-4 d-flex justify-content-center">
                <div class="card p-4 shadow">
                    <h2 class="text-center mb-4">STUDENT LOGIN</h2>
                    <form action="/login1" method="POST">
                        <div class="form-group">
                            <label for="email">Email:</label>
                            <input type="email" class="form-control" id="email" name="email" required>
                        </div>
                        <div class="form-group">
                            <label for="DateofBirth">Date of Birth:</label>
                            <input type="text" class="form-control" id="DateofBirth" name="DateofBirth" placeholder="DD-MM-YYYY" required>
                        </div>
                        <button type="submit" class="btn btn-primary btn-block">Login</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS (optional, for interactive elements like modals, tooltips, etc.) -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.4/dist/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
