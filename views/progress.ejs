<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Value Learn</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
</head>

<body>
    
    <div class="container mt-5">
        <h1 class="text-center text-primary mb-4">PROGRESS STATUS</h1>
        <div class="card shadow-lg mb-4">
            <div class="card-body">
                <h3 class="card-title text-success">Performance Overview</h3>
                <p class="card-text"><strong>Total Marks:</strong> <%= data.totalMarks || 'Not Available' %></p>
                <p class="card-text"><strong>Grade:</strong> <%= data.grade || 'Not Available' %></p>
            </div>
        </div>
        <div class="card shadow-lg">
            <div class="card-body">
                <h3 class="card-title text-primary">Progress Chart</h3>
                <canvas id="progressChart" class="mt-4"></canvas>
            </div>
        </div>
    </div>
    <script>
        // Safely injecting EJS values into JavaScript
        const progressData = {
            weeklyAssessment: <%= data.weeklyAssessment || 0 %>,
            monthlyAssessment: <%= data.monthlyAssessment || 0 %>,
            practicalExam: <%= data.practicalExam || 0 %>,
            finalExam: <%= data.finalExam || 0 %>
        };

        const ctx = document.getElementById('progressChart').getContext('2d');
        const chart = new Chart(ctx, {
            type: 'bar',
            data: {
                labels: ['Weekly Assessment', 'Monthly Assessment', 'Practical Exam', 'Final Exam'],
                datasets: [{
                    label: 'Marks',
                    data: [
                        progressData.weeklyAssessment,
                        progressData.monthlyAssessment,
                        progressData.practicalExam,
                        progressData.finalExam
                    ],
                    backgroundColor: ['#007bff', '#28a745', '#ffc107', '#dc3545'],
                }]
            },
            options: {
                responsive: true,
                scales: {
                    y: {
                        beginAtZero: true
                    }
                }
            }
        });
    </script>


   <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
   <br>
   <div class="text-center">
    
    <div style="
        display: inline-block;
        padding: 20px;
        background-color: #ffcccc;
        color: red;
        font-weight: bold;
        border-radius: 10px;
        text-align: center;
        box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);
    ">
        
        
        Use Back Button In The Web Page To Go Back To The Home Page
    </div>
</body>
</html>
